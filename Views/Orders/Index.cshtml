@model IEnumerable<BakeryWebsite.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE HTML>

<html>

<head>

    <title>Appraise Your Textbook!</title>
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />

</head>
<body>
    <a href="~/Home/Index" class="logo"><img src="~/images/new-logo.png" alt="" class="center"></a>
    <nav>
        <ul>
            <li>
                <a href="~/Home/Index">Home</a>
            </li>
            <li>
                <a href="~/Products/Index">Products</a>
            </li>
            <li>
                <a href="~/Orders/Index">Orders</a>
            </li>
            <li>
                <a href="~/Clients/Index">Clients</a>
            </li>
            <li>
                <a href="~/Home/About">About</a>
            </li>
           
        </ul>
    </nav>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product ID
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Description
                </th>
                <th>
                    Operation
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ordQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ordDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ordDescription)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ordersID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ordersID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ordersID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>
