@model BakeryWebsite.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE HTML>

<html>

<head>

    <title>Appraise Your Textbook!</title>
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />

</head>
<body>
    <a href="~/Home/Index" class="logo"><img src="~/images/new-logo.png" alt="" class="center"></a>
    <nav>
        <ul>
            <li>
                <a href="~/Home/Index">Home</a>
            </li>
            <li>
                <a href="~/Products/Index">Products</a>
            </li>
            <li>
                <a href="~/Orders/Index">Orders</a>
            </li>
            <li>
                <a href="~/Clients/Index">Clients</a>
            </li>
            <li>
                <a href="~/Home/About">About</a>
            </li>
            
        </ul>
    </nav>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="productsID" />
                <div class="form-group">
                    <label asp-for="prdName" class="control-label">Product Name</label>
                    <input asp-for="prdName" class="form-control" />
                    <span asp-validation-for="prdName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prdPrice" class="control-label">Product Price</label>
                    <input asp-for="prdPrice" class="form-control" />
                    <span asp-validation-for="prdPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prdDescription" class="control-label">Product Description</label>
                    <input asp-for="prdDescription" class="form-control" />
                    <span asp-validation-for="prdDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    </body>
</html>
